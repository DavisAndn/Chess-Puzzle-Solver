{
    "manifest_version": 3,
    "name": "Chess.com PGN Extractor",
    "version": "1.0",
    "permissions": [
      "declarativeNetRequest",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://www.chess.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  